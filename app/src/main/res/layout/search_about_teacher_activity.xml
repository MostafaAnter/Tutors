<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    android:layoutDirection="ltr"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="perfect_apps.tutors.activities.RegisterTeacherMembershipActivity"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="none">
    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/search_screen_ico"/>

        <TextView
            android:id="@id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7CB034"
            style="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:text="إبحث عن مدرس"/>
        <TextView
            android:gravity="center_horizontal"
            android:id="@id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="?android:attr/listPreferredItemHeightSmall"
            android:text="عزيزي الطالب . ابحث الان عن مدرس بكل سهولة ويسر"/>

        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="?android:attr/listPreferredItemHeightSmall"
                android:background="@drawable/border_shape"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:padding="8dp"
                    android:src="@drawable/down_arrow" />
                <ImageView
                    android:contentDescription="@null"
                    android:layout_width="30dp"
                    android:padding="3dp"
                    android:layout_margin="1dp"
                    android:background="#f8f8f8"
                    android:tint="#7CB034"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_place_ico"/>

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />


            </RelativeLayout>

            <View
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="?android:attr/listPreferredItemHeightSmall"
                android:background="@drawable/border_shape"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:padding="8dp"
                    android:src="@drawable/down_arrow" />
                <ImageView
                    android:contentDescription="@null"
                    android:layout_width="30dp"
                    android:padding="3dp"
                    android:layout_margin="1dp"
                    android:background="#f8f8f8"
                    android:tint="#7CB034"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_place_ico"/>

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />


            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_height="?android:attr/listPreferredItemHeightSmall"
            android:background="@drawable/border_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:padding="8dp"
                android:src="@drawable/down_arrow" />
            <ImageView
                android:contentDescription="@null"
                android:layout_width="30dp"
                android:padding="3dp"
                android:tint="#7CB034"
                android:layout_margin="1dp"
                android:background="#f8f8f8"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:src="@drawable/ic_action_school_ico"/>

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_height="?android:attr/listPreferredItemHeightSmall"
            android:background="@drawable/border_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:padding="8dp"
                android:src="@drawable/down_arrow" />
            <ImageView
                android:contentDescription="@null"
                android:layout_width="30dp"
                android:padding="3dp"
                android:tint="#7CB034"
                android:layout_margin="1dp"
                android:background="#f8f8f8"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:src="@drawable/ic_action_schooll_icon"/>

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_height="?android:attr/listPreferredItemHeightSmall"
            android:background="@drawable/border_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:padding="8dp"
                android:src="@drawable/down_arrow" />
            <ImageView
                android:contentDescription="@null"
                android:layout_width="30dp"
                android:padding="3dp"
                android:tint="#7CB034"
                android:layout_margin="1dp"
                android:background="#f8f8f8"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:src="@drawable/ic_action_serv_ico"/>

            <Spinner
                android:id="@+id/spinner5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_height="?android:attr/listPreferredItemHeightSmall"
            android:background="@drawable/border_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:padding="8dp"
                android:src="@drawable/down_arrow" />
            <ImageView
                android:contentDescription="@null"
                android:layout_width="30dp"
                android:padding="3dp"
                android:tint="#7CB034"
                android:layout_margin="1dp"
                android:background="#f8f8f8"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:src="@drawable/ic_action_sex_ico"/>

            <Spinner
                android:id="@+id/spinner6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/border_shape_green"
            android:orientation="horizontal"
            android:id="@+id/searchTeachers">
            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="بحث"
                android:textColorHint="#7CB034"
                android:textColor="#7CB034"
                android:padding="5dp"
                style="?android:attr/textAppearanceMedium"
                android:background="#00000000" />
            <ImageView
                android:contentDescription="@null"
                android:layout_width="48dp"
                android:padding="8dp"
                android:layout_margin="1dp"
                android:background="#7CB034"
                android:layout_height="match_parent"
                android:src="@drawable/ic_action_search_ico"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
