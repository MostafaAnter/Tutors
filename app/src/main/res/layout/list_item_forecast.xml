<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    
    <ImageView
        android:id="@+id/avatar"
        android:contentDescription="@null"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="?android:attr/listPreferredItemHeightLarge"
        android:src="@drawable/login_user_ico"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_height="?android:attr/listPreferredItemHeightLarge"
        android:orientation="vertical"
        android:gravity="bottom">
        <TextView
            android:id="@+id/name"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="محمد مصطفى عبدالوهاب"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style= "@style/CustomRatingBar"
                android:id="@+id/ratingBar"
                android:numStars="1"
                android:stepSize="0.01"
                android:isIndicator="true"/>
            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="0.5"/>

            <TextView
                android:id="@+id/rateStatic1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text=" / "/>
            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/rateStatic2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/rate"/>
        </LinearLayout>
        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="يتم اكتساب القوه عن طريق تبادل المعرفه يتم اكتساب القوه عن طريق تبادل "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".75"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/costPerHour"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f8f8f8"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_weight="3"
            style="?android:attr/textAppearanceLarge"
            android:text="122"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:text="الساعة"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>